{
  "name": "@game/gameserver",
  "private": true,
  "version": "0.0.0",
  "description": "Game Server",
  "author": {
    "name": "Mstislav Zhivodkov",
    "email": "stevemyz@gmail.com",
    "url": "https://trufi.github.io/"
  },
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:server && npm run build:copydata && npm run build:copyclientjs",
    "build:server": "tsc -p tsconfig.json",
    "build:copydata": "copyfiles -f ../newdata/assets/*.json dist/newdata/assets",
    "build:copyclientjs": "copyfiles -f ../client/dist/* dist/client/dist",
    "prod": "node -r dotenv/config -r module-alias/register dist/server/src/index.js dotenv_config_path=\"../../.env\"",
    "dev": "nodemon",
    "lint": "tslint 'src/**/*.ts'",
    "prettier": "prettier --check \"./**/*.{ts,tsx,js,json,html,css}\"",
    "test": "npm run lint && npm run prettier && npm run build"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/ws": "^7.4.0",
    "axios": "^0.21.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "hyperid": "^2.0.5",
    "joi": "^17.3.0",
    "module-alias": "^2.2.2",
    "tslib": "^2.0.3",
    "ws": "^7.4.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts",
    "exec": "ts-node -r tsconfig-paths/register -r dotenv/config src/index.ts dotenv_config_path=../../.env"
  },
  "_moduleAliases": {
    "@game/utils": "dist/utils/src",
    "@game/client": "dist/client/src",
    "@game/data": "dist/data"
  }
}
